html
    head
        style.
            body{
                background-color: rgb(30, 30, 30);
                font-family: Verdana;
                color: rgb(255, 255, 255);
                text-align: center;
            }
            footer {
                line-height: 1.5;
                font-size: x-small;
            }
            hr {
                background-color: rgb(255, 255, 255);
            }
            fieldset {
                font-size: 20px;
                line-height: 2;
                border-top: 0px;
                border-left: 0px;
                border-right: 0px;
                border-bottom: 2px white;
            }
            legend {
                font-size: 20px;
                line-height: 3;
                font-weight: bold;
            }
            table {
                font-size: 20px;
                border: 2px solid white;
                width: 50%;
                margin: 0 auto;
            }
            input{
                font-size: 20px;
                border-radius: 10px;
            }
            button {
                padding: 10px;
                font-size:20px;
                border-radius: 10px;
            }
            table {
                width: 100%;
                border: 1px solid #000;
            }
            th, td {
                width: 25%;
                text-align: center;
                vertical-align: center;
                border: 1px solid white;
                border-collapse: collapse;
                padding: 0.3em;
            }
            caption {
                padding: 0.3em;
            }
            img {
                max-width: 20%;
            }
            .avisos{
                margin: 0 auto;
                width: 20%;
                padding: 30px;
                background-color: rgb(125, 104, 0);
            }
